@model LoginVM
@{
    ViewData["Title"] = "Login";
}


@section Css{

    <link rel="shortcut icon" href="https://img.icons8.com/office/512/online-store.png" type="image/x-icon">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="~/assets/css/login/login.css">
}


<!-- Start Main Area -->
<main>

    <section id="login-area">
        <div class="container">
            <div class="image-wapper" style="background-image: url(https://images.unsplash.com/photo-1578932750294-f5075e85f44a?ixlib=rb-1.2.1&amp;ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&amp;auto=format&amp;fit=crop&amp;w=1470&amp;q=80)">
                <h1>Welcome Back</h1>
            </div>
            <div class="form-wapper">
                <div class="form-header">
                    <h2>Sign In</h2>
                    <p>Welcome back! Please login to your account and continue growing your store.</p>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="form-body">
                    <form asp-controller="Account" asp-action="Login" method="post" enctype="multipart/form-data" >
                        <div class="input-wrapper">
                            <label asp-for="UsernameOrEmail">Fullname</label>
                            <input id="email" asp-for="UsernameOrEmail" autocomplete="off" placeholder="John Musk" required />
                            <span class="text-danger my-2" asp-validation-for="UsernameOrEmail"> </span>
                        </div>
                        <div class="input-wrapper">
                            <label asp-for="Password">Password</label>
                            <input id="password" asp-for="Password" placeholder="**********" /><span class="icon show-pass"><i class="fa-solid fa-eye"></i></span>
                            <span class="text-danger" asp-validation-for="Password"> </span>
                        </div>
                        <div class="input-wrapper more-action">
                            <label>
                            </label><a class="form-link" href="#">Forgot Password?</a>
                        </div>
                        <div class="signIn">
                            <button type="submit" class="btn btn-primary">Sign In</button>


                        </div>
                    </form>
                </div>
                <div class="form-footer">
                    <p>Don't have an account yet?<a class="form-link" asp-controller="Account" asp-action="Register">Sign Up</a></p>
                </div>
            </div>
        </div>

    </section>

</main>
<!-- end Main Area -->

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.1/jquery.min.js"
            integrity="sha512-aVKKRRi/Q/YV+4mjoKBsE4x3H+BkegoM/em46NNlCqNTmUYADjBbeNefNxYV7giUp0VxICtqdrbqU7iVaeZNXA=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
            crossorigin="anonymous"></script>

    <script src="https://kit.fontawesome.com/0622708fc2.js" crossorigin="anonymous"></script>


    <script src="~/assets/js/login/login.js"></script>
}